{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "es2022",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "strictNullChecks": true,
        // "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node16",
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ]
}